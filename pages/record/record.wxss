.record-title{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 34rpx;
  border-bottom: 1rpx solid #e4e4e4;
  background: #fff;
}
.record-class{
  display: flex;
  justify-content: center;
  align-items: center;
}
.record-class .iconfont {
  color: #888888;
  font-size: 22rpx;
  margin-left: 5rpx;
}
.record-class .icon-quanxianfuzhi{
  color: #1f8de3;
}
.record-img{
  width: 8rpx;
  height: 8rpx;
  display: block;
  margin-left: 16rpx;
}


.add-title{
  width: 100%;
  height: 87rpx;
  line-height: 87rpx;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e4e4e4;
}
.people-name{
  /* line-height: 26rpx; */
  font-size: 30rpx;
  color: #000000;
}

.item{
  display: flex;
  justify-content: space-between;
   background: rgb(255, 255, 255); 
  padding: 0 30rpx;
  width: 100%;
  border-bottom: 1rpx solid rgb(229,229,229);
  box-sizing: border-box;
}
.item-icon{
  margin-top: 21rpx;
  display: flex;
  align-items: center;
  height: 32rpx;
}
.item-icon image{
  width: 44rpx;
  height: 44rpx;
}
.icon-tianjia{
  display: block;
  font-size: 48rpx;
  color: rgb(31,141,227);
  /* margin-bottom: 6rpx; */
}
.item-name{
  font-size: 34rpx;
  margin-left: 19rpx;
  color: rgb(0,0,0)
}
.item-title{
  margin-left: 71rpx;
  margin-top: 18rpx;
  font-size: 26rpx;
  color: rgb(0,0,0);
  line-height: 26rpx;
}
.item-date{
  margin: 20rpx 0 25rpx 71rpx;
  font-size: 26rpx;
  color: rgb(136,136,136);
  line-height: 21rpx;
}
.item-details{
  font-size: 0;
  text-align: right;
}
.item-money{
  margin-top: 26rpx;
  font-size: 34rpx;
  color: rgb(0,0,0);
  line-height: 26rpx;
}
.item-btn{
  margin-top: 38rpx;
  width: 160rpx;
  height: 48rpx;
  border-radius: 6rpx;
  line-height: 48rpx;
  text-align: center;
  background: rgb(31,141,227);
  color: rgb(255,255,255);
  font-size: 26rpx;
}

.list-class{
  position: fixed;
  left: 0;
  top: 99rpx;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
}
.list-item{
  flex: 1;
  text-align: center;
  height: 172rpx;
  background: #fff;
}
