.list-name{
  margin: 14rpx 0 39rpx 0;
  color: #888888;
  font-size: 24rpx;
}
.list-class image{
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin: 40rpx auto 0;
}
.show_toast{
  font-size: 30rpx;
  text-align: center;
  padding: 50rpx 0 0;
  color: #888;
}